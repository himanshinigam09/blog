<div class="container">
  <div class="row">
    <!-- Post Content Column -->
      <div class="col-lg-8">
        <!-- Title -->
          <h1 class="mt-4"><%= @post.title %></h1>
          <hr>

          <!-- Date/Time -->
          <p>Posted on <%= @post.created_at.to_date %></p>
          <hr>

          <!-- Preview Image -->
          <div class="img-fluid rounded" alt="">
            <%= image_tag(@post.image_url.to_s, class: "img-fluid") %>
      	  </div>
          <hr>

          <!-- Post Content -->
          <p class="lead"><%= @post.body %></p>
          <hr>

          <%= link_to "Edit", edit_post_path(@post), :class => "btn btn-primary" %>
          <%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "Are you sure, you want to delete the post?"}, :class => "btn btn-primary" %>
          <%= link_to "Back", posts_path, :class => "btn btn-primary" %><br /><br />
          <hr> <br />
      </div>
       
      <div class="col-md-4">
        <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
            	<%= form_tag(post_path, :method => "get", id: "search-form") do %>
           			<div class="input-group">
    					     <%= text_field_tag :search, params[:search], placeholder: "Search Recipes", :class => "form-control" %>
    					     <span class="input-group-btn">
    						    <%= submit_tag("Go!", :class=>"btn btn-secondary", :name=>nil) %>
						      </span>
					      </div>
				      <% end %>
				      <% if @posts.blank? %>
				        <h4>There are no posts containing the term <%= params[:search] %>.</h4>
				      <% end %>
            </div>
          </div>
      </div>
</div>
  <!-- /.row -->
</div>
  <!-- /.container -->

    
